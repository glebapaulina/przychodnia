            <Button x:Name="porada" Click="porada_Click" Content="Wykonaj poradę" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="46,278,0,0" Height="28"/>
            <Button x:Name="badanie" Click="badanie_Click" Content="Wykonaj badanie" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="46,324,0,0" Height="26"/>
            <Button x:Name="raport" Content="Generuj raport" Click="raport_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="46,371,0,0" Height="25"/>
            <TextBlock x:Name="kolejka" Width="316" Height="232" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="221,268,0,0"/>

        </Grid>


    </Grid>
